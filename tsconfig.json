{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"lib": ["DOM", "ES2015", "ES2016.Array.Include", "ES2019.Array"],
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		]
	}
}
